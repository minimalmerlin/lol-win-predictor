# Environment Variables Template
# ================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env or .env.local to Git!

# Riot Games API Key
# Get your key from: https://developer.riotgames.com/
# Note: Development keys expire after 24 hours
RIOT_API_KEY=RGAPI-your-key-here

# Supabase PostgreSQL Connection
# Get from: Supabase Dashboard → Project Settings → Database
POSTGRES_URL=postgresql://user:password@host:5432/database
POSTGRES_URL_NON_POOLING=postgresql://user:password@host:5432/database

# Supabase Public Keys (safe to share - designed for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOi...your-anon-key

# Internal API Key (for protecting internal endpoints)
NEXT_PUBLIC_INTERNAL_API_KEY=your-secret-key-here
